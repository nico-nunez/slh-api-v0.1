<% layout('layouts/boilerplate') %>

<link rel="stylesheet" href="/styles/lists.css" />

<div class="row">
	<h1 class="text-center">Secret Santa Party</h1>
	<div class="col-lg-5 col-md-6 m-auto">
		<form action="/parties" method="POST" novalidate class="validate-form">
			<div class="mb-3 form-group">
				<label class="form-label" for="name">
					Title:
					<span class="text-muted text-xsmall ms-2"> required </span>
				</label>
				<input
					class="form-control"
					type="text"
					name="party[title]"
					id="party-title"
					placeholder="party title"
					minlength="3"
					maxlength="50"
					required
				/>
			</div>
			<div class="mb-3 form-group">
				<label class="form-label" for="party-selections">
					Draw Names:
					<span class="text-muted text-xsmall ms-2"> required </span>
				</label>
				<input
					type="date"
					class="form-control"
					id="party-selections"
					name="party[selectionsOn]"
					required
				/>
			</div>
			<div class="mb-3 form-group">
				<label class="form-label" for="party-exchange">
					Exchange Gifts:
					<span class="text-muted text-xsmall ms-2"> required </span>
				</label>
				<input
					type="date"
					class="form-control"
					id="party-exchange"
					name="party[exchangeOn]"
					required
				/>
			</div>
			<div class="mb-3 form-group">
				<label class="form-label" for="party-secret">
					Secret Code:
					<span class="text-muted text-xsmall label-aside"> optional** </span>
				</label>
				<div class="password-input-group">
					<input
						class="form-control password-input"
						type="password"
						name="party[secret]"
						id="join-code"
						placeholder="code to join"
						minlength="8"
						maxlength="30"
					/>
					<i class="far fa-eye password-eye-con text-muted"></i>
				</div>
			</div>
			<div class="form-check form-switch mb-3">
				<input
					class="form-check-input"
					type="checkbox"
					role="switch"
					id="flexSwitchCheckDefault"
					name="party[public]"
					checked
				/>
				<label class="form-check-label" for="private">
					Public <span class="text-muted">*</span>
				</label>
			</div>
			<button class="btn btn-primary" type="submit">Create</button>
			<a href="/parties" class="btn btn-danger ms-3">Cancel</a>
		</form>
		<div class="mt-5">
			<p class="text-muted text-xsmall mb-0">
				* Dictates whether your party can be seen by non members.
			</p>
			<p class="text-muted text-xsmall">
				** Must be a min. of 8 letters and/or numbers. This wil be used as a
				method to allow people to join, and can be changed anytime. One will be
				automaticly generated if left blank.
			</p>
		</div>
	</div>
</div>

<script src="/js/parties.js"></script>
